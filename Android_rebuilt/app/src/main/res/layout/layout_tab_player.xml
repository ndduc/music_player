<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_tab_1">

    <!--Custom Tab Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        >
        <Button
            android:id="@+id/btnTab_Prev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/img_prev"

            ></Button>
        <Button
            android:id="@+id/btnTab_Play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/img_play"
            ></Button>
        <Button
            android:id="@+id/btnTab_Next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/img_next"
            ></Button>

        <Button
            android:id="@+id/btnTab_Re"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/img_repeat"

            ></Button>

        <Button
            android:id="@+id/btnTab_Shuf"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/img_shuf"
            ></Button>
    </LinearLayout>
</LinearLayout>